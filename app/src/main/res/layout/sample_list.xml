<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_width="wrap_content"
    android:background="@drawable/background_edit_text_black"
    android:layout_marginVertical="@dimen/_7sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainLayout"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:focusable="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/cardNumberLayout"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:id="@+id/ivCardType"
                android:src="@drawable/ic_news"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="Data sample">
            </ImageView>
            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rbold"
                android:text="Sample Data here"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnDeleteCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@drawable/background_edit_text_black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_delete_pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rmedium"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp" />


    </LinearLayout>

</RelativeLayout>